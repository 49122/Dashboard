<main>
        <div class="main">
          <div class="status">
            <h1><a class="nav-button" href= "/" >Inicio</a></h1>
            <img src="/images/Main-icon.png" alt="" />
            <h1>Registered companies</h1>
     

        {{#list registros}}
        <canvas id="Dashboard{{{id}}}" width="400" height="400"></canvas>
        <script script-src='self' src="/javascript/chart.js"></script>
        <script>
        var element_id = {{id}}
        var index= element_id.toString();   
        var ctx = document.getElementById('Dashboard' + index).getContext('2d');
        var Dashboard = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [{{elements}}],
                datasets: [{
                    label: [`${{name}}`],
                    data: [{{elements}}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        </script>

        {{/list}}

        </div>
  </section>
</main>